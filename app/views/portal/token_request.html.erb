<%= render 'shared/header' %>

<div class="content">
  <h1>Log in</h1>
  <p>Enter your email address and we'll send you a secure link to access your print jobs.</p>

  <%= form_with url: send_login_path,
                scope: :patron,
                method: :post,
                local: false,
                data: { turbo_stream: true } do |f| %>

    <div class="field mb-3">
      <%= f.label :email, 'Email Address', class: 'form-label' %>
      <%= f.email_field :email,
                        placeholder: 'you@example.com',
                        class: 'form-control',
                        required: true %>
    </div>

    <div class="actions">
      <%= f.submit 'Send Login Link', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

