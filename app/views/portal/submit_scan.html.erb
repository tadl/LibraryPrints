<main class="container my-5">
  <h1 class="mb-4">Request a 3D Scan</h1>

  <%= form_tag submit_scan_path,
        multipart: true,
        local: true,
        data: { turbo: false } do %>

    <%= render 'portal/patron_fields' %>
    <%= render 'portal/scan_image_field' %>
    <%= render 'portal/spray_ok' %>
    <%= render 'portal/notes_field',
                header: 'Description',
                label: 'Description',
                placeholder: 'What would you like us to scan?',
                help_text: nil %>
    <%= render 'portal/pickup_location', require_scanner: true %>
    <%= render 'portal/captcha' %>
    <%= render 'portal/submit_button',
                submit_label: 'Submit Scan Request',
                submit_help: "Weâ€™ll email you when your scan is ready for pick-up." %>
  <% end %>
</main>
