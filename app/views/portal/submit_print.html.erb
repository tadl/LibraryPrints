<main class="container my-5">
  <h1 class="mb-4">Request a 3D Print</h1>

  <%= form_tag submit_print_path,
        multipart: true,
        local: true,
        data: { turbo: false } do %>

    <%= render 'portal/patron_fields' %>
    <%= render 'portal/model_upload_or_url' %>
    <%= render 'portal/filament_color' %>
    <%= render 'portal/notes_field',
                header: 'Additional Instructions',
                label: 'Notes',
                placeholder: 'Any special instructions…',
                help_text: nil %>
    <%= render 'portal/pickup_location' %>
    <%= render 'portal/captcha' %>
    <%= render 'portal/submit_button',
                submit_label: 'Submit Print Request',
                submit_help: "After receiving your submission, we’ll get back to you within 48 hours (usually much sooner)..." %>
  <% end %>
</main>
