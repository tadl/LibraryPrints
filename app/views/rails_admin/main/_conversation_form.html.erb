<div id="conversation_form" class="rails_admin_conversation_form">
  <%= form_with url:    main_app.admin_job_conversation_path(job),
                scope:  :conversation,
                method: :post,
                multipart: true,
                format: :turbo_stream,     # still needed so Rails knows to route .turbo_stream
                local:  false,
                data:   { turbo: true } do |f| %>

    <div class="field">
      <%= f.text_area :message_body,
            placeholder: t('rails_admin.conversation.placeholder'),
            rows: 3,
            class: 'form-control' %>
    </div>

    <div class="field form-check">
      <%= f.check_box :staff_note_only,
            class: 'form-check-input',
            id: 'staff_note_only' %>
      <%= f.label :staff_note_only,
            t('rails_admin.conversation.staff_note_only'),
            class: 'form-check-label' %>
    </div>

    <div class="field">
      <%= f.label :images, "Attach images" %>
      <%= f.file_field :images, multiple: true, direct_upload: true %>
    </div>

    <div class="actions mt-2">
      <%= f.submit t('rails_admin.conversation.send'),
                   class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
